  deps = [
    "//base",
    "//extensions/browser",
    "//extensions/common",
    "//third_party/zlib:minizip",
    "//skia",
    ":nw_base",
    "//content/nw/src/api:nw_api",
    "//content/nw/src/api:nw_api_registration",
    "//third_party/protobuf:protobuf_lite",
    "//third_party/webrtc/modules/desktop_capture",
  ]
