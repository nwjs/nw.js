{
    "private": true,
    "scripts": {
        "fmt": "prettier --write ./**/*.js",
        "lnt": "eslint ./**/*.js"
    },
    "devDependencies": {
        "eslint": "^8.34.0",
        "prettier": "^2.8.4"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "quoteProps": "consistent",
        "trailingComma": "all",
        "bracketSpacing": true,
        "bracketSameLine": false,
        "arrowParens": "always",
        "proseWrap": "preserve",
        "htmlWhitespaceSensitivity": "strict",
        "endOfLine": "lf",
        "singleAttributePerLine": true
    },
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": 2021,
            "sourceType": "module"
        },
        "env": {
            "es6": true,
            "node": true
        },
        "extends": [
            "eslint:recommended"
        ]
    }
}